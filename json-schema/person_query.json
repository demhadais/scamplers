{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "PersonQuery",
  "type": "object",
  "properties": {
    "email": {
      "type": [
        "string",
        "null"
      ],
      "default": null
    },
    "ids": {
      "type": [
        "array",
        "null"
      ],
      "default": null,
      "items": {
        "type": "string",
        "format": "uuid"
      }
    },
    "limit": {
      "type": "integer",
      "format": "int64",
      "default": 500
    },
    "microsoft_entra_oids": {
      "type": [
        "array",
        "null"
      ],
      "default": null,
      "items": {
        "type": "string",
        "format": "uuid"
      }
    },
    "name": {
      "type": [
        "string",
        "null"
      ],
      "default": null
    },
    "offset": {
      "type": "integer",
      "format": "int64",
      "default": 0
    },
    "orcid": {
      "type": [
        "string",
        "null"
      ],
      "default": null
    },
    "order_by": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "descending": {
            "type": "boolean",
            "default": false
          },
          "field": {
            "type": "string",
            "enum": [
              "id",
              "email",
              "name"
            ]
          }
        }
      }
    }
  }
}