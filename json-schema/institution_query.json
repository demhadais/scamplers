{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "InstitutionQuery",
    "type": "object",
    "properties": {
        "ids": {
            "type": "array",
            "default": [],
            "items": {
                "type": "string",
                "format": "uuid"
            }
        },
        "limit": {
            "type": "integer",
            "format": "uint32",
            "default": 0,
            "minimum": 0
        },
        "names": {
            "type": "array",
            "default": [],
            "items": {
                "type": "string"
            }
        },
        "offset": {
            "type": "integer",
            "format": "uint32",
            "default": 0,
            "minimum": 0
        },
        "order_by": {
            "type": "array",
            "items": {
                "oneOf": [
                    {
                        "type": "object",
                        "properties": {
                            "descending": {
                                "type": "boolean"
                            },
                            "field": {
                                "type": "string",
                                "const": "id"
                            }
                        },
                        "required": [
                            "field",
                            "descending"
                        ]
                    },
                    {
                        "type": "object",
                        "properties": {
                            "descending": {
                                "type": "boolean"
                            },
                            "field": {
                                "type": "string",
                                "const": "name"
                            }
                        },
                        "required": [
                            "field",
                            "descending"
                        ]
                    }
                ]
            }
        }
    }
}