{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Person",
  "type": "object",
  "properties": {
    "email": {
      "type": [
        "string",
        "null"
      ]
    },
    "id": {
      "type": "string",
      "format": "uuid"
    },
    "institution": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid"
        },
        "links": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          }
        },
        "name": {
          "type": "string"
        }
      },
      "required": [
        "id",
        "name",
        "links"
      ]
    },
    "institution_id": {
      "type": "string",
      "format": "uuid"
    },
    "links": {
      "type": "object",
      "additionalProperties": {
        "type": "string"
      }
    },
    "ms_user_id": {
      "type": [
        "string",
        "null"
      ],
      "format": "uuid"
    },
    "name": {
      "type": "string"
    },
    "orcid": {
      "type": [
        "string",
        "null"
      ]
    },
    "roles": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": [
          "app_admin",
          "biology_staff",
          "computational_staff"
        ]
      }
    }
  },
  "required": [
    "id",
    "name",
    "institution_id",
    "links",
    "institution",
    "roles"
  ]
}