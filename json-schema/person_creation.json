{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "PersonCreation",
  "type": "object",
  "properties": {
    "email": {
      "type": "string"
    },
    "institution_id": {
      "type": "string",
      "format": "uuid"
    },
    "microsoft_entra_oid": {
      "type": [
        "string",
        "null"
      ],
      "format": "uuid"
    },
    "name": {
      "type": "string"
    },
    "orcid": {
      "type": [
        "string",
        "null"
      ]
    },
    "roles": {
      "type": "array",
      "default": [],
      "items": {
        "type": "string",
        "enum": [
          "app_admin",
          "biology_staff",
          "computational_staff"
        ]
      }
    }
  },
  "required": [
    "name",
    "institution_id",
    "email"
  ]
}