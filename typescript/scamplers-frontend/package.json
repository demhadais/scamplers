{
	"name": "scamplers-frontend",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"build-scamplers": "cd ../.. && ./pre-commit_scripts/build-scamplers-js.sh",
		"dev": "npm run build-scamplers && vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "PUBLIC_API_PATH='' API_ADDRESS_SERVER='' svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"test:unit": "vitest",
		"test": "npm run test:unit -- --run && npm run test:e2e",
		"test:e2e": "playwright test"
	},
	"devDependencies": {
		"@eslint/compat": "^1.3.2",
		"@eslint/js": "^9.35.0",
		"@playwright/test": "^1.55.0",
		"@sveltejs/adapter-node": "^5.3.2",
		"@sveltejs/kit": "^2.41.0",
		"@sveltejs/vite-plugin-svelte": "^6.2.0",
		"@tailwindcss/vite": "^4.1.13",
		"@testing-library/jest-dom": "^6.8.0",
		"@testing-library/svelte": "^5.2.8",
		"daisyui": "^5.1.12",
		"eslint": "^9.35.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-svelte": "^3.12.3",
		"globals": "^16.4.0",
		"jsdom": "^27.0.0",
		"prettier": "^3.6.2",
		"prettier-plugin-svelte": "^3.4.0",
		"prettier-plugin-tailwindcss": "^0.6.14",
		"svelte": "^5.38.10",
		"svelte-check": "^4.3.1",
		"tailwindcss": "^4.1.12",
		"typescript": "^5.9.2",
		"typescript-eslint": "^8.44.0",
		"vite": "^7.1.5",
		"vite-plugin-wasm": "^3.5.0",
		"vitest": "^3.2.4"
	},
	"dependencies": {
		"@auth/core": "^0.40.0",
		"@auth/sveltekit": "^1.10.0",
		"@types/node": "^24.5.0",
		"scamplers": "file:../scamplers"
	}
}
